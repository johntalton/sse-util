{
  "name": "@johntalton/sse-util",
  "version": "0.0.4",
  "description": "Set of Utilities and Defines for build HTTP for SSE ",
  "main": "./lib/sse.js",
  "exports": {
    "import": "./lib/sse.js",
    "require": "./lib/sse.js"
  },
  "type": "module",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js.map"
  ],
  "types": "lib/sse.d.ts",
  "scripts": {
    "lint": "npm --silent run lint:ts",
    "lint:ts": "./node_modules/.bin/eslint --ext .ts src/*.ts",
    "test": "npm run test:mocha",
    "test:mocha": "mocha",
    "build": "tsc -p .",
    "build:watch": "npm run build -- -w",
    "coverage": "npm --silent run coverage:c8",
    "coverage:c8": "c8 --check-coverage --all --lines 75 --functions 5 --branches 85 npm --silent run test:mocha -- --no-parallel --reporter min"
  },
  "eslintConfig": {
    "extends": [
      "@johntalton/eslint-config/ts"
    ],
    "env": {
      "node": false
    },
    "plugins": [
      "import",
      "promise"
    ],
    "rules": {
      "no-tabs": "off",
      "indent": ["error", "tab"],
      "keyword-spacing": [
        "error",
        {
          "overrides": {
            "if": {
              "after": true
            },
            "for": {
              "after": true
            },
            "while": {
              "after": true
            },
            "switch": {
              "after": true
            }
          }
        }
      ],

      "valid-jsdoc": "off",
      "max-len": [
          "warn",
          {
              "code": 120
          }
      ],
      "fp/no-throw": "off",
      "fp/no-nil": "off",
      "fp/no-class": "off",
      "fp/no-unused-expression": "off",
      "immutable/no-mutation": "off",
      "fp/no-mutation": "off",
      "fp/no-this": "off",
      "immutable/no-this": "off",

      "import/no-nodejs-modules": "off",
      "spellcheck/spell-checker": [
        "error",
        {
          "ignoreRequire": true,
          "identifiers": false,
          "minLength": 3,
          "skipWords": [
            "johntalton", "codepoint"
          ]
        }
      ]
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      ".vscode",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  },
  "mocha": {
    "spec": [
      "test/*.spec.js"
    ],
    "grep": "@broken|@slow",
    "invert": true,
    "parallel": true,
    "watch": false,
    "sort": false,
    "forbitOnly": true,
    "check-leaks": true,
    "global": [],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johntalton/sse-util.git"
  },
  "author": "johntalton@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johntalton/sse-util/issues"
  },
  "homepage": "https://github.com/johntalton/sse-util#readme",
  "devDependencies": {
    "@johntalton/eslint-config": "github:johntalton/eslint-config",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^5.59.8",
    "c8": "^7.3.0",
    "chai": "^4.2.0",
    "eslint": "^8.41.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-spellcheck": "0.0.20",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
